<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/view_title_comment_layout"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText

        android:id="@+id/et_name_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:drawableLeft="@drawable/user"
        android:hint="用户名"/>
    <EditText
        android:id="@+id/et_password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/password"
        android:layout_below="@+id/et_name_login"
        android:inputType="textPassword"
        android:hint="密码"
        />

    <Button
        android:id="@+id/bt_login_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="登录"
        android:textColor="#fff"
        android:background="#444444"
       android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_forgetpass_login"
        />
    <Button
        android:id="@+id/bt_signup_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="注册"
        android:textColor="#fff"
        android:background="#444444"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/bt_login_login"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/tv_forgetpass_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码？"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/et_password_login"/>
    <TextView
        android:id="@+id/tv_error_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/tv_forgetpass_login"
        android:layout_marginLeft="15dp"
        android:textColor="#ff0000"
        android:layout_below="@+id/et_password_login"/>
</RelativeLayout>

</LinearLayout>