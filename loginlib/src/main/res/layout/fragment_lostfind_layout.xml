<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <include layout="@layout/view_title_comment_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/et_phone_lostfind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/phone"
            android:layout_marginTop="10dp"
            android:inputType="phone"
            android:hint="注册手机号码"
            />

        <EditText
            android:id="@+id/et_name_lostfind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/user"
            android:layout_marginTop="5dp"
            android:hint="注册用户名"
            android:layout_below="@+id/et_phone_lostfind"
           />


        <TextView
            android:id="@+id/tv_question_lostfind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/et_name_lostfind"
            android:text="对你影响最深的人？"/>
        <EditText
            android:id="@+id/et_question_lostfind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_question_lostfind"
            android:layout_alignBaseline="@+id/tv_question_lostfind"/>

        <Button
            android:id="@+id/bt_find_lostfind"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/tv_question_lostfind"
            android:layout_marginTop="30dp"
            android:background="#444444"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="找回密码"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_find_lostfind"/>
        <TextView
            android:id="@+id/tv_error_lostfind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/bt_find_lostfind"
            android:layout_marginLeft="20dp"
            android:textColor="#ff0000"
            android:text=""/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>