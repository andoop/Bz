<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">
    <include layout="@layout/view_title_comment_layout"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_name_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/user"
        android:hint="用户名"/>

    <EditText
        android:id="@+id/et_phone_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/phone"
        android:layout_below="@id/et_name_sign"
        android:layout_marginTop="6dp"
        android:inputType="phone"
        android:hint="手机号"/>

    <EditText
        android:id="@+id/et_rpass_signup"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/password"
        android:layout_height="wrap_content"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/et_pass_signup"
      />

    <EditText
        android:id="@+id/et_answer_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="对你影响最深的人的名字"
        android:layout_marginTop="6dp"
        android:layout_below="@id/et_rpass_signup"
     />

    <Button
        android:id="@+id/bt_finish_signup"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="注册"
        android:background="#444444"
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/et_answer_signup"
        />

    <TextView
        android:id="@+id/tv_error_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ss"
        android:layout_alignBaseline="@+id/bt_finish_signup"
        android:layout_toRightOf="@+id/bt_finish_signup"
        android:layout_marginLeft="20dp"
        android:textColor="#ff0000"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/et_pass_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入密码"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/password"
        android:layout_below="@+id/et_phone_sign"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
</LinearLayout>