<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="#fff"
        android:paddingBottom="15dp"
        android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/ll_faxian_item_title"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_faxian_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="标题"/>
</LinearLayout>

        <View
            android:id="@+id/faxian_01"
            android:layout_width="match_parent"
            android:background="@color/Bg"
            android:layout_below="@+id/ll_faxian_item_title"
            android:layout_height="1dp"/>
        <View
            android:id="@+id/faxian_02"
            android:layout_width="match_parent"
            android:background="@color/Bg"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_below="@+id/ll_faxian_item_title"
            android:layout_height="1dp"/>

        <com.andoop.ctrlf5.bangzhu.customview.XCRoundImageView
            android:id="@+id/iv_faxian_item_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_below="@id/faxian_02"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_faxian_item_name"
            android:layout_toRightOf="@+id/iv_faxian_item_icon"
            android:layout_alignTop="@+id/iv_faxian_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="名字"/>

        <ImageView
            android:id="@+id/iv_faxian_item_sex"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/tv_faxian_item_name"
            android:layout_alignTop="@+id/tv_faxian_item_name"
            android:src="@drawable/nv"/>

        <TextView
            android:id="@+id/tv_faxian_item_zhiwei"
            android:layout_width="wrap_content"
            android:layout_alignLeft="@+id/tv_faxian_item_name"
            android:layout_below="@+id/tv_faxian_item_name"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:text="产品经理"/>

        <LinearLayout
            android:id="@+id/ll_faxian_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignLeft="@+id/tv_faxian_item_zhiwei"
            android:layout_below="@+id/tv_faxian_item_zhiwei"
            >
            <TextView
                android:id="@+id/tv_faxian_item_tag01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_tag_bg"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="15sp"
                android:text="java"/>

            <TextView
                android:id="@+id/tv_faxian_item_tag02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_tag_bg"
                android:textColor="#fff"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="视频剪辑"/>

            <TextView
                android:id="@+id/tv_faxian_item_tag03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_tag_bg"
                android:textColor="#fff"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="商务外交"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/v_faxian_item_vvv"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/Bg"
        android:visibility="gone"
        />
</LinearLayout>
