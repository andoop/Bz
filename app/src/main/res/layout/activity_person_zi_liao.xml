<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_person_zi_liao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context="com.andoop.ctrlf5.bangzhu.view.PersonZiLiaoActivity">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorPrimary">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:text="详细资料"/>
</FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#fff"
        android:layout_marginTop="10dp">

        <com.andoop.ctrlf5.bangzhu.customview.XCRoundImageView
            android:id="@+id/iv_zl_icon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_zl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/iv_zl_icon"
            android:layout_alignTop="@+id/iv_zl_icon"
            android:layout_marginTop="10dp"
            android:text="姓名"/>
        <ImageView
            android:id="@+id/iv_zl_sex"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/tv_zl_name"
            android:layout_toRightOf="@+id/tv_zl_name"
            android:src="@drawable/nv"/>
        <TextView
            android:id="@+id/tv_zl_gz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+关注"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
           android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/skill_choose_selector"/>

        <TextView
            android:id="@+id/tv_zl_zhiwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/iv_zl_icon"
            android:layout_below="@+id/tv_zl_name"
            android:layout_marginTop="10dp"
            android:text="产品经理"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="10dp"
            android:text="专长技能"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_tag_bg"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:text="专长技能"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_tag_bg"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:text="专长技能"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_tag_bg"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:text="专长技能"/>

    </LinearLayout>
</LinearLayout>
